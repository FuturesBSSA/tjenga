<div class="modal fade" id="signup-modal-client" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog">
    <div class="loginmodal-container">
      <div class="login-content">
        <h2 style="margin-top: 11px;">Sign-up Client</h2>
        <hr style="border-top: solid 1px #DADADA; width: 100%;">
        <%= simple_form_for(:client, url: registration_path(:client)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :first_name, required: true, autofocus: true, label: false, placeholder: 'First name', :input_html => {class: 'name'} %>

          <%= f.input :last_name, required: true, autofocus: true, label: false, placeholder: 'Last name', :input_html => {class: 'name'} %>
          <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'E-mail', :input_html => {class: 'email'} %>
          <%= f.input :password, required: true, label: false, placeholder: 'Password', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), :input_html => {class: 'password'} %>
          <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Password confirmation', :input_html => {class: 'password-confirm'} %>
          <div class="upload-form">
            <div style="display: none;">
            <%= f.input_field :photo, required: true, as: :file, label: false, placeholder: 'Company logo' %>
            <%= f.input :photo_cache, as: :hidden %>
            </div>
            <span>
              <p style="display: inline-block;">Company Logo:</p><label for="client_photo">Choose image</label>
            </span>
          </div>
        </div>


        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-success" %>
        </div>
          <%= f.input :remember_me, as: :boolean %>
        <% end %>

        <hr style="border-top: solid 1px #DADADA; width: 100%;">
        <ul class="list-inline options">
          <li>

            Already have an account? <%= link_to "Log in", new_session_path(:client) %>
          </li>
        </ul>
        <% # render "devise/shared/links", resource_name: :client, devise_mapping: Devise.mappings[:client] %>
      </div>
    </div>
  </div>
</div>
