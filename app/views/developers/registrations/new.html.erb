<div class="form-in text-center">

  <h2>Sign up as Developer</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true, autofocus: true, :input_html => {:style=> 'width: 20em; text-align: center; margin: 0 auto;'} %>
    <%= f.input :last_name, required: true, autofocus: true, :input_html => {:style=> 'width: 20em; text-align: center; margin: 0 auto;'} %>
    <%= f.input :email, required: true, autofocus: true, :input_html => {:style=> 'width: 20em; text-align: center; margin: 0 auto;'} %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), :input_html => {:style=> 'width: 20em; text-align: center; margin: 0 auto;'} %>
    <%= f.input :password_confirmation, required: true, :input_html => {:style=> 'width: 20em; text-align: center; margin: 0 auto;'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn btn-success" %>
  </div>
  <% end %>
  <br>
  <%= render "devise/shared/links" %>

</div>
