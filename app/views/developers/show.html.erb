<div class="dev-banner">
  <div class="container text-center">
    <h3><%= @developer.first_name %> <%= @developer.last_name %></h3>
    <hr style="border-top: 1px solid grey;">
    <div class="developer-header">
      <div class="developer-info">
         <div class="photo">
          <%= cl_image_tag @developer.photo, class: "avatar-xlarge" %>
        </div>
      </div>

      <div class="developer-info">
        <div class="dev-name">
          <em><p>Expertise:</p></em>
          <p><%= @developer.expertise.capitalize %></p>
          <em><p>Availability:</p></em>
          <p><%= @developer.availability.capitalize %></p>
        </div>
      </div>

      <div class="developer-info">
        <div class="dev-details">

          <h3 style="margin-top: 0px;">Contact Details</h3>
          <p><i class="fa fa-envelope-o"></i><%= @developer.email %> </p>
          <p><i class="fa fa-phone"></i><%= @developer.phone_number %></p>
        </div>
      </div>

      <div class="developer-info">
        <% #link_to "Work with me", class: "btn btn-success" %>
        <%= mail_to "matthijs@gmail.com", "Contact me", class: "btn btn-success" %>
      </div>
    </div>


      <div class="developer-info">
        <% if developer_signed_in? || client_signed_in? %>
          <hr style="border-top: 1px solid grey;">
          <div class="dev-btn text-center">
            <%= link_to "Edit profile", edit_developer_profile_path, class: "btn btn-default" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
   <h2 class="text-center">Work</h2>
   <hr>
   <div class="col-xs-12 col-sm-6 col-sm-offset-3">
     <div class="work">
       <% @works.each do |work| %>
       <div class="work-image">
         <%= link_to work.website_url do %>
         <%= cl_image_tag work.photo, height: 250, width: 300, crop: :fill %>
         <% end %>
         <div class="work-description">
           <h4><%= work.title %></h4>
           <%= work.description %>
         </div>
       </div>
       <div class="work-image">
         <%= link_to work.website_url do %>
         <%= cl_image_tag work.photo, height: 250, width: 300, crop: :fill %>
         <% end %>
         <div class="work-description">
           <h4><%= work.title %></h4>
           <%= work.description %>
         </div>
       </div>
       <% end %>
     </div>
   </div>
 </div>
</div>

<div class="container">
  <div class="row">

    <h2 class="text-center">Reviews</h2>
    <hr>
    <% @reviews.each do |review| %>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="review">
        <div class="review-image">
          <%= cl_image_tag review.author.photo, class: "avatar-large" %>
        </div>
        <div class="review-body">
          <% review.rating.times do %>
          <i class="fa fa-star"></i>
          <% end %>
          <% (5 - review.rating).times do %>
          <i class="fa fa-star-o"></i>
          <% end %>
          <p><%= review.description %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <h2 class="text-center">Recommendations</h2>
    <%  @recommendations.each do |recommendation|%>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= cl_image_tag recommendation.author.photo, class: "avatar" %>
      <p>- <%= recommendation.content  %></p>
      <% end %>

      <% if developer_signed_in? || client_signed_in? %>
      <%= link_to "Write a recommendation for #{@developer.first_name}", new_developer_recommendation_path(@developer), class: 'btn btn-default' %>
    </div>
    <% end %>
  </div>
</div>
