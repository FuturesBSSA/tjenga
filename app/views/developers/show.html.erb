<div class="dev-banner">

  <div class="container">
    <div class="row">

      <div class="col-xs-12 col-sm-3">
       <div class="photo avatar-profile">
        <%= cl_image_tag @developer.photo %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="dev-name">
        <ul>
          <h3><%= @developer.first_name %> <%= @developer.last_name %></h3>
          <li> <%= @developer.expertise.capitalize %> </li>
          <li> <%= @developer.availability.capitalize %> </li>
        </ul>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="dev-details">
        <ul>
        <h3>Contact Details</h3>
          <li> <%= @developer.address.capitalize %> </li>
          <li> <%= @developer.city.capitalize %> </li>
          <li> <%= @developer.email %> </li>
        </ul>
      </div>
    </div>
    <div class="col-xs-12 col-sm-1">
      <div class="dev-btn">
        <%= link_to "Work with me", "#", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-7 col-sm-offset-4">

      <h2>Reviews</h2>
      <% @reviews.each do |review| %>
      <div class="product">
        <div class="product-image">
        </div>
        <div class="product-body">
          <% review.rating.times do %>
          <i class="fa fa-star"></i>
          <% end %>
          <% (5 - review.rating).times do %>
          <i class="fa fa-star-o"></i>
          <% end %>
          <%= review.description %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <h2>Recommended by:</h2>
  <%  @recommendations.each do |recommendation|%>
  <p>- <%= recommendation.content  %></p>
  <% end %>

  <%= link_to "Write a recommendation for #{@developer.first_name}", new_developer_recommendation_path(@developer), class: 'btn btn-default' %>
</div>
