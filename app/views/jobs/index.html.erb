<div class="job-wrapper-header">
    <h1>Search Jobs</h1>
</div>

<div class="job-wrapper-gray">
  <div class="container">
      <% @jobs.each do |job| %>
        <div class="job-box">
        <%= link_to "", job_path(job), class: "job-link" %>
          <div class='job-body-box'>
            <div class='job-avatar-box'>
              <%= cl_image_tag job.client.photo, height: 100, width: 100, crop: :fill, class: "job-avatar" %>
            </div>
            <div class="job-content-box">
              <div class="job-title-box">
                <div class="job-title">
                  <strong><%= job.title.capitalize %></strong>   <%= job.client.company %>
                </div>
              </div>
              <div class="job-row-box job-row-box-style">
                <div style="padding-left: 20px;">
                  <%= job.description %>
                </div>
              </div>
              <div class="job-row-box">
                <div class="job-element-box">
                  <div style="text-align: center;">
                    <strong>Start date</strong>
                  </div>
                  <div style="text-align: center;">
                    <%= job.start_date %>
                  </div>
                </div>
                <div class="job-element-box">
                  <div style="text-align: center;">
                    <strong>Duration</strong>
                  </div>
                  <div style="text-align: center;">
                    <%= job.duration %>
                  </div>
                </div>
                <div class="job-element-box">
                  <div style="text-align: center;">
                    <strong>You earn</strong>
                  </div>
                  <div style="text-align: center;">
                    <i class="fa fa-euro"></i> <%= job.budget %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>


