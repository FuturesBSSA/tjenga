<div class="wrapper-greyblue">
  <div class="container is-small">
    <div class="job">
      <div class="title">
        <h2> <%= @job.title %> </h2>
        <p><%= @full_name %></p>
      </div>
      <div class="apply">
        <%= link_to "Apply", new_job_application_path(@job), class: "btn btn-primary" %>

      </div>
    </div>
  </div>
</div>

<div class="wrapper">
  <div class="container is-small light-grey">
    <h3 class="text-center">Job description</h3>
    <div class="job-description">
      <%= @job.description %>
    </div>
  </div>
</div>


<div class="wrapper">

  <div class="container is-small light-grey">
    <div class="text-center">

      <div class="row">
        <div class="col-xs-12 col-sm-3">
          <div class="card-job">
            <h4>Start date </h4>
            <%= @job.start_date %>
          </div>
        </div>

        <div class="col-xs-12 col-sm-3">
          <div class="card-job">
            <h4>Deadline </h4>
            <%= @job.deadline %>
          </div>
        </div>

        <div class="col-xs-12 col-sm-3">
          <div class="card-job">
            <h4>Budget </h4>
            <i class="fa fa-euro"> <%= @job.budget %> </i>
          </div>
        </div>

        <div class="col-xs-12 col-sm-3">
          <div class="card-job">
            <h4>Difficulty </h4>
            <%= @job.difficulty_level %>
          </div>
        </div>

      </div>
      <hr>
    </div>
  </div>
</div>

<div class="wrapper">

  <div class="container is-small light-grey">
    <h3 class="text-center">About</h3>
    <div class="job-about">
      <div class="image">
        <%= cl_image_tag @client.photo, crop: :fill, class: "avatar-xlarge" %>
        <br>
        <h4> City </h4>
        <p> <%= @client.city %> </p>

        <i class="fa fa-envelope"> <%= @client.email %> </i>
      </div>

      <div class="details">
        <div class="info">
          <h4> Company </h4>
          <p><%= @client.company %></p>
        </div>

        <div class="info">
          <h4> Address </h4>
          <p><%= @client.address %></p>
        </div>

        <div class="info">
          <h4> Name </h4>
          <p><%= @full_name %></p>
        </div>
        <br>
      </div>
    </div>
  </div>
</div>





