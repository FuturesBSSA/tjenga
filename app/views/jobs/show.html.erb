<div class="wrapper-greyblue">
  <div class="container is-small">
    <div class="job">
      <div class="title">
        <h2> <%= @job.title %> </h2>
        <p><%= @full_name %></p>
        <p> <%= @job.status.capitalize %> </p>
      </div>
      <% if developer_signed_in? %>
      <div class="apply">
        <%= link_to "Apply", new_job_application_path(@job), class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="wrapper">
  <div class="container is-small">
    <h3 class="text-center">Job description</h3>
    <div class="job-description">
      <div class="job-text">
        <%= @job.description %>
      </div>
    </div>
  </div>
</div>


<div class="wrapper">

  <div class="container is-small light-grey">
    <div class="text-center">

      <div class="row">
        <div class="col-xs-12 col-sm-3">
          <div class="card-job">
            <h4>Start date </h4>
            <p><%= @job.start_date %></p>
          </div>
        </div>

        <div class="col-xs-12 col-sm-3">
          <div class="card-job">
            <h4>Deadline </h4>
            <p><%= @job.deadline %></p>
          </div>
        </div>

        <div class="col-xs-12 col-sm-3">
          <div class="card-job">
            <h4>Budget </h4>
            <p><i class="fa fa-euro"></i> <%= @job.budget %> </p>
          </div>
        </div>

        <div class="col-xs-12 col-sm-3">
          <div class="card-job">
            <h4>Difficulty </h4>
            <%= @job.difficulty_level.capitalize %>
          </div>
        </div>

      </div>
      <hr>
    </div>
  </div>
</div>

<div class="wrapper">

  <div class="container is-small light-grey">
    <div class="job-about">
      <div class="image">
        <%= cl_image_tag @client.photo, crop: :fill, class: "avatar-xlarge" %>
        <hr style="width: 15em; border-top: solid 1px grey; margin-bottom: 0px; margin-top: 24px;">
        <div style="padding-left: 45px;">
          <p> <i class="fa fa-envelope"></i>  <%= @client.email %></p>
          <p> <i class="fa fa-phone"></i>  <%= @client.phone_number %></p>
        </div>
      </div>

      <div class="details">
        <div class="info">
          <h4> Company </h4>
          <p><%= @client.company.capitalize %></p>
        </div>

        <div class="info">
          <h4> Name </h4>
          <p><%= @full_name.capitalize %></p>
        </div>

        <div class="info">
          <h4> City </h4>
          <p> <%= @client.city %> </p>
        </div>

        <div class="info">
          <h4> Address </h4>
          <p><%= @client.address.capitalize %></p>
        </div>
      </div>
    </div>
  </div>
</div>





