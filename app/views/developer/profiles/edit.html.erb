<% @status = ["Yes", "No"] %>
<div class="container form">
  <div class="form-container">
    <h1 class='text-center'>Edit profile</h1>
    <hr style="width: 20em;">
    <%= simple_form_for(@developer, url: developer_profile_path) do |f| %>
    <%= f.error_notification %>
    <%= f.input :first_name  %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :price_per_hour %>
    <%= f.input :phone_number %>
    <%= f.input :city %>
    <%= f.input :address %>
    <%= f.input :expertise %>
    <%= f.input :availability, :collection => @status %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <div id="programming_languages">
      <%= f.simple_fields_for :programming_languages do |programming_language| %>
        <%= render 'programming_language_fields', f: programming_language %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'add more programming languages', f, :programming_languages, class: "btn btn-primary" %>
      </div>
    </div>
    <div id="tools">
      <%= f.simple_fields_for :tools do |tool| %>
        <%= render 'tool_fields', f: tool %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'add more tools', f, :tools, class: "btn btn-primary" %>
      </div>
      <div class="space">
      </div>
    </div>
    <%= f.submit class: "btn btn-primary", :input_html => {style: 'width: 20em; margin: 0 auto;'} %>
    <% end %>
  </div>
  <div class="space">
  </div>
</div>

