<% @status = ["Yes", "No"] %>
<div class="container">
  <div class="text-center">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <h1>Edit profile</h1>
        <hr style="width: 20em;">
        <%= simple_form_for(@developer, url: developer_profile_path) do |f| %>
        <%= f.error_notification %>

        <%= f.input :first_name, :input_html => {style: 'width: 20em; margin: 0 auto;'} %>
        <%= f.input :last_name, :input_html => {style: 'width: 20em; margin: 0 auto;'} %>
        <%= f.input :email, :input_html => {style: 'width: 20em; margin: 0 auto;'} %>
        <%= f.input :price_per_hour, :input_html => {style: 'width: 20em; margin: 0 auto;'} %>
        <%= f.input :phone_number, :input_html => {style: 'width: 20em; margin: 0 auto;'} %>
        <%= f.input :city, :input_html => {style: 'width: 20em; margin: 0 auto;'} %>
        <%= f.input :address, :input_html => {style: 'width: 20em; margin: 0 auto;'} %>
        <%= f.input :expertise, :input_html => {style: 'width: 20em; margin: 0 auto;'} %>
        <%= f.input :availability, :collection => @status, :input_html => {style: 'width: 20em; margin: 0 auto;'} %>
        <%= f.submit class: "btn btn-primary", :input_html => {style: 'width: 20em; margin: 0 auto;'} %>
        <%= f.input :photo, :input_html => {:style=> 'width: 20em; text-align: center; margin: 0 auto;'} %>
        <%= f.input :photo_cache, as: :hidden %>
        <% end %>
      </div>
    </div>
  </div>
</div>
