<div class="port-banner">
  <div class="container is-small">
    <div class="port-show">
      <div class="port-title">
        <h1>Your portfolio</h1>
      </div>
    </div>
  </div>
</div>

<div class="wrapper">

  <% @works.each do |work| %>
  <div class="container is-small light-grey">
    <div class="porfolio white">
      <div class="port-title">
        <h4><%= work.title %></h4>
      </div>
      <div class="work-desc">
        <p><%= work.description %></p>
      </div>

      <div class="port-img">

        <%= link_to work.website_url do %>
        <%= cl_image_tag work.photo, height: 200, width: 300, crop: :fill, class: "port-img" %>
        <% end %>
      </div>
      <div class="text-center">
        <p><%= work.client_name %></p>
      </div>

      <div class="text-center">

        <%= link_to "Delete", developer_profile_work_path(work), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } %>
        <%= link_to "Edit", edit_developer_profile_work_path(work), class: "btn btn-primary" %>
      </div>
      <hr>
    </div>
  </div>
  <% end %>
</div>

