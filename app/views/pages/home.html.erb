<div class="banner home_image" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_path('banner.jpg') %>);">
  <div class="banner-content">
    <h1>Tjenga</h1>
    <p>Where kick-ass developers meet awesome clients</p>
    <div class="form-width">
      <%= form_tag developers_path, method: "get", class: "flex-form" do %>
        <%= text_field_tag :programming_language, @search, placeholder: "Search by programming language" %>
        <%= text_field_tag :budget, @search, placeholder: "Budget" %>
        <%= submit_tag("Search") %>
      <% end %>
    </div>
  </div>
</div>
